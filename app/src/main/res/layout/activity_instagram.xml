<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.exercises.javid.myHomework.uis.InstagramActivity">

    <ListView
        android:id="@+id/lv_insta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_insta_home"
            android:layout_width="@dimen/insta_icon_dim"
            android:layout_height="@dimen/insta_icon_dim"
            android:layout_weight="1"
            android:onClick="onClickMenuItem"
            android:paddingBottom="@dimen/insta_icon_pd"
            android:paddingTop="@dimen/insta_icon_pd"
            android:src="@drawable/ic_home_black_24dp" />

        <ImageView
            android:id="@+id/img_insta_search"
            android:layout_width="@dimen/insta_icon_dim"
            android:layout_height="@dimen/insta_icon_dim"
            android:layout_weight="1"
            android:onClick="onClickMenuItem"
            android:paddingBottom="@dimen/insta_icon_pd"
            android:paddingTop="@dimen/insta_icon_pd"
            android:src="@drawable/ic_search_black_24dp" />

        <ImageView
            android:id="@+id/img_insta_cam"
            android:layout_width="@dimen/insta_icon_dim"
            android:layout_height="@dimen/insta_icon_dim"
            android:layout_weight="1"
            android:onClick="onClickMenuItem"
            android:paddingBottom="@dimen/insta_icon_pd"
            android:paddingTop="@dimen/insta_icon_pd"
            android:src="@drawable/ic_photo_camera_black_24dp" />

        <ImageView
            android:id="@+id/img_insta_favorite"
            android:layout_width="@dimen/insta_icon_dim"
            android:layout_height="@dimen/insta_icon_dim"
            android:layout_weight="1"
            android:onClick="onClickMenuItem"
            android:paddingBottom="@dimen/insta_icon_pd"
            android:paddingTop="@dimen/insta_icon_pd"
            android:src="@drawable/ic_favorite_black_24dp" />

        <ImageView
            android:id="@+id/img_insta_person"
            android:layout_width="@dimen/insta_icon_dim"
            android:layout_height="@dimen/insta_icon_dim"
            android:layout_weight="1"
            android:onClick="onClickMenuItem"
            android:paddingBottom="@dimen/insta_icon_pd"
            android:paddingTop="@dimen/insta_icon_pd"
            android:src="@drawable/ic_person_black_24dp" />

    </LinearLayout>

</LinearLayout>
