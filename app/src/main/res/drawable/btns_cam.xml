<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:gravity="center">
        <shape
            android:shape="rectangle">

            <corners
                android:radius="300dp"/>
            <size
                android:width="280dp"
                android:height="280dp"/>

            <solid
                android:color="#3c000000"/>
        </shape>
    </item>


    <item
        android:right="90dp"
        android:top="90dp"
        android:left="90dp"
        android:bottom="90dp"
        android:gravity="center">
        <shape
            android:shape="oval">

            <corners
                android:radius="200dp"/>

            <solid
                android:color="#64000000"/>
        </shape>
    </item>
</layer-list>